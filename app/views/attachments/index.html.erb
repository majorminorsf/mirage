<%= render :partial => "layouts/admin_header" %>
<h1>Listing attachments <%= link_to '<i class="icon-pencil"></i> New'.html_safe, new_attachment_path, :class => "btn btn-default btn-xs" %></h1>

<table class='table'>
  <tr>
    <th>File</th>
    <th>Label</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @attachments.each do |attachment| %>
  <tr>
    <td><%= attachment.attached_file.blank? ? "None" : attachment.attached_file_file_name %></td>
    <td><%= attachment.label %></td>
    <td><%= link_to 'Show', attachment %></td>
    <td><%= link_to 'Edit', edit_attachment_path(attachment) %></td>
    <td><%= link_to 'Destroy', attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= link_to '<i class="icon-pencil"></i> New'.html_safe, new_attachment_path, :class => "btn btn-default btn-xs" %>