<%= simple_form_for(@strain) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :strain, input_html: { class: 'form-control' } %>
    <%= f.input :name, input_html: { class: 'form-control' } %>
    <%= f.input :description, input_html: { class: 'form-control' } %>
    <%= f.input :thc, input_html: { class: 'form-control' } %>
    <%= f.input :cbd, input_html: { class: 'form-control' } %>
    <%= f.input :price, input_html: { class: 'form-control' }, label: 'Price per eighth' %>
    <%= f.input :photo, input_html: { class: 'form-control' } %>
    <%= f.input :published, input_html: { class: 'form-control' } %>
    <%= f.input :featured, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
